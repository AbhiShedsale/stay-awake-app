<resources>
    <string name="app_name">Awake</string>
    <string name="tile_uninstalled_text">Stay awake</string>
    <string name="tile_active_text">Stops in %1$s</string>
    <string name="tile_active_charging_text">Screen awake while charging</string>
    <string name="tile_inactive_text">Stay awake</string>
    <string name="notification_stop_action_text">Stop</string>
    <string name="notification_text_title">Awake is running</string>
    <string name="notification_text_content">Click to open the app</string>

    <string name="about_title">
        About
    </string>
    <string name="about_message">
        Awake runs as a Quick Tile Setting.
        \n\nPlease add Awake’s Quick Settings Tile icon to your
        notification tray.
        \n\nIf your phone is charging and you turn on Awake, it will
        stay awake indefinitely.
        \n\nIf your phone is not charging, Awake will keep your phone’s
        screen awake for %1$d minutes.
    </string>

    <string name="github_title">
        Open Source
    </string>

    <string name="github_message">
        The source code is available at -
        https://github.com/r3bl-alliance/stay-awake-app
    </string>

    <string name="install_title">
        Install
    </string>

    <string name="install_1_message">
        <b>STEP 1</b>
        - Slide down
        your Quick Settings Tile and click on edit.
    </string>

    <string name="install_2_message">
        <b>STEP 2</b>
        - Find Awake
        icon. Long press and drag it to the top.
    </string>

    <string name="install_3_message">
        <b>STEP 3</b>
        - You\'re
        done! Turn on Awake, by clicking on "Stay awake" icon
    </string>

</resources>
