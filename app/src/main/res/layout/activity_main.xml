<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/awake_logo"/>

            <TextView
                    android:text="@string/app_name"
                    style="@style/TextLargest"
                    android:gravity="center_vertical"/>

        </LinearLayout>

        <TextView
                android:text="@string/about_title"
                style="@style/TextTitle"/>

        <TextView
                android:id="@+id/textview1"
                style="@style/TextContent"
                android:text="@string/about_message"/>

        <TextView
                style="@style/TextTitle"
                android:text="@string/install_title"/>

        <TextView
                style="@style/TextContent"
                android:text="@string/install_1_message"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/install_1"/>

        <TextView
                style="@style/TextContent"
                android:text="@string/install_2_message"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/install_2"/>

        <TextView
                style="@style/TextContent"
                android:text="@string/install_3_message"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/install_3"/>

        <TextView
                style="@style/TextTitle"
                android:text="@string/github_title"
        />

        <TextView
                style="@style/TextContent"
                android:id="@+id/textview2"
                android:text="@string/github_message"/>

    </LinearLayout>
</ScrollView>
